<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey"
    android:orientation="vertical">
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapp.dbf">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="443dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="368dp"
            android:layout_height="340dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="112dp"
                    android:layout_height="48dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="ASSESSMENT TYPE" />

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="33dp"
                    android:textStyle="bold"
                    android:text="CURRENT MARK"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="17dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="NEW MARK" />

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="112dp"
                    android:textColor="#000000"
                    android:layout_height="48dp"
                    android:text="LAB 1" />

                <TextView
                    android:id="@+id/tu1"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:layout_height="48dp"
                    android:text="" />

                <EditText
                    android:id="@+id/TUT_1"
                    android:layout_width="79dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:onClick="add_mark"
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:text="UPDATE" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/TEST1"
                    android:layout_width="112dp"
                    android:layout_height="48dp"
                    android:textColor="#000000"
                    android:text="LAB 2" />

                <TextView
                    android:id="@+id/tu2"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:textColor="#000000"
                    android:text="" />

                <EditText
                    android:id="@+id/TEST_1"
                    android:layout_width="79dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:onClick="add_mark"
                    android:visibility="gone"
                    android:text="UPDATE" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/TUT2"
                    android:layout_width="112dp"
                    android:textColor="#000000"
                    android:layout_height="48dp"
                    android:text="LAB 3" />

                <TextView
                    android:id="@+id/tu3"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:layout_height="29dp"
                    android:text="" />

                <EditText
                    android:id="@+id/TUT_2"
                    android:layout_width="82dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:onClick="add_mark"
                    android:visibility="gone"
                    android:text="UPDATE" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lab4"
                    android:layout_width="112dp"
                    android:textColor="#000000"
                    android:layout_height="48dp"
                    android:text="LAB 4" />

                <TextView
                    android:id="@+id/tut4"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:layout_height="29dp"
                    android:text="" />

                <EditText
                    android:id="@+id/LAB_4"
                    android:layout_width="82dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:onClick="add_mark"
                    android:visibility="gone"
                    android:text="UPDATE" />

            </TableRow>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/project"
                    android:layout_width="112dp"
                    android:textColor="#000000"
                    android:layout_height="48dp"
                    android:text="PROJECT" />

                <TextView
                    android:id="@+id/tu7"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:layout_height="29dp"
                    android:text="" />

                <EditText
                    android:id="@+id/PROJECT"
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:onClick="add_mark"
                    android:visibility="gone"
                    android:text="UPDATE" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/test_1"
                    android:layout_width="112dp"
                    android:textColor="#000000"
                    android:layout_height="48dp"
                    android:text="TEST 1" />

                <TextView
                    android:id="@+id/tu8"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:layout_height="29dp"
                    android:text="" />

                <EditText
                    android:id="@+id/test1"
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:ems="10"
                    android:inputType="numberDecimal" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:onClick="add_mark"
                    android:visibility="gone"
                    android:text="UPDATE" />

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/avarage"
                    android:layout_width="112dp"
                    android:textColor="#000000"
                    android:layout_height="48dp"
                    android:text="YEAR MARK" />

                <TextView
                    android:id="@+id/tu4"
                    android:layout_width="70dp"
                    android:textColor="#000000"
                    android:layout_height="29dp"
                    android:text="" />


                <Button
                    android:id="@+id/calculate"
                    android:layout_width="29dp"
                    android:layout_height="wrap_content"
                    android:onClick="getMarks"
                    android:visibility="gone"
                    android:text="CAL" />
                <Button
                    android:id="@+id/reloader"
                    android:visibility="gone"
                    android:layout_width="29dp"
                    android:layout_height="wrap_content"
                    android:onClick="reloader"
                    android:text="rel" />
                <Button
                    android:id="@+id/button5"
                    android:onClick="update_all"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="UPDATE" />

            </TableRow>

        </TableLayout>


    </ScrollView>

    <TextView
        android:id="@+id/message1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.693" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="MOBILE COMPUTING"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.993" />


</android.support.constraint.ConstraintLayout>