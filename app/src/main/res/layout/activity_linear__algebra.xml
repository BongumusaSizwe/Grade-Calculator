<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey"
    android:orientation="vertical">
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapp.LINEAR_ALGEBRA">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="418dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.688">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="368dp"
                android:layout_height="340dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/heading"
                        android:layout_width="112dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_height="48dp"
                        android:text="ASSESSMENT TYPE" />

                    <TextView
                        android:layout_width="48dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="CURRENT MARK" />

                    <TextView
                        android:layout_width="17dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="NEW MARK" />

                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="112dp"
                        android:textColor="#000000"
                        android:layout_height="48dp"
                        android:text="TUT 1" />

                    <TextView
                        android:id="@+id/tu1"
                        android:layout_width="wrap_content"
                        android:textColor="#000000"
                        android:layout_height="48dp"
                        android:text="" />

                    <EditText
                        android:id="@+id/TUT_1"
                        android:layout_width="79dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:ems="10"
                        android:inputType="numberDecimal" />

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="101dp"
                        android:layout_height="wrap_content"
                        android:onClick="add_mark"
                        android:visibility="gone"
                        android:text="UPDATE" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/TEST1"
                        android:layout_width="112dp"
                        android:textColor="#000000"
                        android:layout_height="48dp"

                        android:text="TEST 1" />

                    <TextView
                        android:id="@+id/tu2"
                        android:layout_width="wrap_content"
                        android:textColor="#000000"
                        android:layout_height="31dp"
                        android:text="" />

                    <EditText
                        android:id="@+id/TEST_1"
                        android:layout_width="79dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:ems="10"
                        android:inputType="numberDecimal" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="101dp"
                        android:layout_height="wrap_content"
                        android:onClick="add_mark"
                        android:visibility="gone"
                        android:text="UPDATE" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/TUT2"
                        android:layout_width="112dp"
                        android:textColor="#000000"
                        android:layout_height="48dp"
                        android:text="TUT 2" />

                    <TextView
                        android:id="@+id/tu3"
                        android:layout_width="wrap_content"
                        android:textColor="#000000"
                        android:layout_height="29dp"
                        android:text="" />

                    <EditText
                        android:id="@+id/TUT_2"
                        android:layout_width="82dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:ems="10"
                        android:inputType="numberDecimal" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="101dp"
                        android:layout_height="wrap_content"
                        android:onClick="add_mark"
                        android:visibility="gone"
                        android:text="UPDATE" />

                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/avarage"
                        android:layout_width="112dp"
                        android:textColor="#000000"
                        android:layout_height="48dp"
                        android:text="YEAR MARK" />

                    <TextView
                        android:id="@+id/tu4"
                        android:layout_width="70dp"
                        android:textColor="#000000"
                        android:layout_height="29dp"
                        android:text="" />


                    <Button
                        android:id="@+id/calculate"
                        android:layout_width="29dp"
                        android:layout_height="wrap_content"
                        android:onClick="getMarks"
                        android:visibility="gone"
                        android:text="CAL" />

                    <Button
                        android:id="@+id/reloader"
                        android:layout_width="101dp"
                        android:layout_height="wrap_content"
                        android:onClick="reloader"
                        android:text="rel"
                        android:visibility="gone"/>
                    <Button
                        android:id="@+id/button5"
                        android:onClick="update_all"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="UPDATE" />

                </TableRow>

            </TableLayout>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/message1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="#000000"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.67" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="#000000"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="LINEAR ALGEBRA"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />


</android.support.constraint.ConstraintLayout>